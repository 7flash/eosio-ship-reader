{
  "extends": "./node_modules/@blockmatic/tsconfig/tsconfig.nodejs.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "rootDirs": ["src/"],
    "typeRoots": ["./src/types"],
    "outDir": "dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "dist/"
  },
  "exclude": ["node_modules"],
  "files": ["src/index.ts"],
  "includes": ["./src/**/*.ts"]
}

